<h1>Users#index</h1>

<table class="table table-bordered table-hovered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Playlist</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><a href="<%= user_path(u) %>" class="btn btn-info">Ver Playlist usuario </a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>