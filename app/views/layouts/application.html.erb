<!DOCTYPE html>
<html>
  <head>
    <title>MySpotify</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
    <xlink rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<link rel="stylesheet" href="https://bootswatch.com/darkly/bootstrap.min.css">

        <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>

  <body>


  	<div class="container">


      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <% if user_signed_in? %>
            <a class="navbar-brand" href="#">Spotify - [ <%= current_user.name %>  ] </a>
            <% else %>
            <a class="navbar-brand" href="#">Spotify</a>
            <% end %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="<%= root_path %>">Home</a></li>
              <% if user_signed_in? %>
              <li> <a href="<%= destroy_user_session_path %>" data-method='delete'>Logout</a></li>
              <% else %>
              <li><a href="<%= new_user_session_path %>"> Login </a></li>
              <li><a href="<%= new_user_registration_path %>"> Register </a></li>
              <% end %>
            </ul>


            </div><!--/.nav-collapse -->
          </div><!--/.container-fluid -->
        </nav>

        <div class="col-md-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>


        <div class="col-md-12">
         <%= yield %>
       </div>	
     </div>
    
  </body>
</html>
